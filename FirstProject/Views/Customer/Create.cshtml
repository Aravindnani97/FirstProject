@model FirstProject.ViewModel.CustomerViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create New Customer</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @Html.ValidationSummary(false, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.LabelFor(x => x.Customer.Name, new { @class = "text-light bg-dark" })
                    @Html.TextBoxFor(x => x.Customer.Name, new { @class = "form-control", autocomplete = "off" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Customer.DateofBirth, new { @class = "text-light bg-dark" })
                    @Html.TextBoxFor(m => m.Customer.DateofBirth, new { @class = "form-control", type = "date", autocomplete = "off" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Customer.Gender, new { @class = "text-light bg-dark" })
                    @Html.DropDownListFor(x=>x.Customer.Gender,new SelectList(Model.Gender,"Value","Text"), new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Customer.Address, new { @class = "text-light bg-dark" })
                    @Html.TextBoxFor(m => m.Customer.Address, new { @class = "form-control", autocomplete = "off" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Customer.MembershipId, new { @class = "text-light bg-dark" })
                    @Html.DropDownListFor(x => x.Customer.MembershipId, new SelectList(Model.GetMemberships, "Id", "MembershipType"),"-Select A MembershipType-", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <button id="cmdSubmit" type="Submit" class="btn btn-outline-success">Create</button>
                </div>
            }
        </div>
    </div>
</div>
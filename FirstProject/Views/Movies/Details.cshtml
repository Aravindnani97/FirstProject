@model FirstProject.Models.Movie
@{
    ViewBag.Title = "Details";
}
<button class="btn btn-outline-light float-right " type="button">@Html.ActionLink("Edit Movie", "Edit", new { id = Model.id},null)</button>

    @using (Html.BeginForm("Delete", "Movies", new { id=Model.id},FormMethod.Post))
    {
        <button id="cmdDelete" type="submit" class="btn btn-outline-danger float-right">Delete</button>
    }


@if (Model == null)
{
    <label>Sorry..!! Currently No Movie Exist On This Id</label>
}
else
{
    <h2>Details of @Model.Name</h2>

    <ul class="list-group">
        <li class="list-group-item">Director Name:@Model.DirectorName</li>
        <li class="list-group-item">Genre:@Model.Genre.GenreName</li>
        <li class="list-group-item">Release Date:@Model.ReleaseDate</li>

    </ul>
}


